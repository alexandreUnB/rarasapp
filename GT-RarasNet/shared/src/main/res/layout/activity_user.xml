<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/act_user_tb_mainToolbar"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_width="match_parent"
        android:background="@color/primary"
        app:theme="@style/AppTheme.Toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        />
    <View
        android:id="@+id/act_center_profile_tb_mainToolbarElevation"
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:background="@drawable/elevation"
        android:layout_below="@id/act_center_profile_tb_mainToolbar"
        />


    <ScrollView
        android:layout_below="@id/act_center_profile_tb_mainToolbarElevation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/ab"
            android:layout_margin="5dp"
         >

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/act_center_profile_cv_mainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/act_user_pb_carregando"

                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:visibility="invisible"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">


                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/act_center_profile_cv_profsCard2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            card_view:cardUseCompatPadding="true"
                            card_view:cardElevation="3dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="vertical">


                                <RelativeLayout

                                    android:id="@+id/av"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp">


                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/avatar"
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="10dp"
                                        android:src="@drawable/ic_no_profile_picture"


                                       />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/material_grey_palette_200"

                                        android:layout_below="@id/avatar"
                                        />







                                </RelativeLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:layout_weight="0.8"
                                    android:orientation="vertical"

                                    >

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/act_user_tv_login"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:layout_marginLeft="10dp"
                                            android:text="Login:"
                                            android:layout_centerHorizontal="true"
                                            android:textStyle="bold"
                                            android:textColor="@color/material_blue_grey_950"
                                            />
                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <android.support.v7.widget.AppCompatTextView
                                                android:id="@+id/user_tv_login"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:padding="5dp"
                                                android:layout_gravity="center"
                                                android:textSize="13sp"
                                                android:textColor="@color/material_grey_palette_400"
                                                />


                                            <android.support.design.widget.TextInputLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">
                                                <android.support.v7.widget.AppCompatEditText
                                                    android:id="@+id/user_et_login"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:padding="5dp"
                                                    android:layout_gravity="center"
                                                    android:textSize="13sp"
                                                    android:textColor="@color/material_grey_palette_400"
                                                    />
                                            </android.support.design.widget.TextInputLayout>
                                        </RelativeLayout>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/act_center_profile_iv_profissionaiscrm"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:layout_marginLeft="10dp"
                                            android:text="Nome:"
                                            android:layout_centerHorizontal="true"
                                            android:textStyle="bold"
                                            android:textColor="@color/material_blue_grey_950"
                                            />
                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                        <android.support.v7.widget.AppCompatTextView
                                            android:id="@+id/user_tv_nome"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:layout_gravity="center"
                                            android:textSize="13sp"
                                            android:textColor="@color/material_grey_palette_400"
                                            />


                                        <android.support.design.widget.TextInputLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                        <android.support.v7.widget.AppCompatEditText
                                            android:id="@+id/user_et_nome"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:layout_gravity="center"
                                            android:textSize="13sp"
                                            android:textColor="@color/material_grey_palette_400"
                                            />
                                        </android.support.design.widget.TextInputLayout>
                                        </RelativeLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/act_user_sobrenome"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:layout_marginLeft="10dp"
                                            android:text="Sobrenome:"
                                            android:layout_centerHorizontal="true"
                                            android:textStyle="bold"
                                            android:textColor="@color/material_blue_grey_950"
                                            />

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                        <android.support.v7.widget.AppCompatTextView
                                            android:id="@+id/user_tv_sobrenome"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:layout_gravity="center"
                                            android:textSize="13sp"
                                            android:textColor="@color/material_grey_palette_400"
                                            />


                                        <android.support.design.widget.TextInputLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                        <android.support.v7.widget.AppCompatEditText
                                            android:id="@+id/user_et_sobrenome"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:layout_gravity="center"
                                            android:textSize="13sp"
                                            android:textColor="@color/material_grey_palette_400"
                                            />
                                        </android.support.design.widget.TextInputLayout>
                                        </RelativeLayout>
                                    </LinearLayout>
                                <LinearLayout


                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/act_center_profile_iv_profissionais1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="5dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_centerInParent="true"
                                            android:text="Email: "
                                            android:textStyle="bold"
                                            android:textColor="@color/material_blue_grey_950"


                                            />
                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/user_tv_email"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:inputType="textEmailAddress"
                                        android:padding="5dp"
                                        android:textSize="13sp"
                                        android:textColor="@color/material_grey_palette_400"
                                        />

                                       <android.support.design.widget.TextInputLayout
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content">

                                        <android.support.v7.widget.AppCompatEditText
                                            android:id="@+id/user_et_email"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:inputType="textEmailAddress"
                                            android:padding="5dp"
                                            android:textSize="13sp"
                                            android:textColor="@color/material_grey_palette_400"
                                            />
                                    </android.support.design.widget.TextInputLayout>
                                    </RelativeLayout>
                                    </LinearLayout>














                            </LinearLayout>

                            </LinearLayout>


                        </android.support.v7.widget.CardView>










                    </LinearLayout>







                </RelativeLayout>

            </android.support.v7.widget.CardView>





        </RelativeLayout>


    </ScrollView>


















</LinearLayout>