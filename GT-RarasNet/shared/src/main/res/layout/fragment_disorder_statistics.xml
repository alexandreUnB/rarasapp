<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/frag_disorder_statistics_vi_toolbarElevation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarElevation"
        android:background="@drawable/elevation"
        android:layout_alignParentTop="true" />

    <!--<android.support.v7.widget.AppCompatButton
        android:id="@+id/frag_disorder_statistics_bt_maisDados"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_accent"
        android:gravity="center"
        android:text="Mais Dados"
        android:textStyle="bold"
        />-->

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/frag_disorder_statistics_vi_toolbarElevation"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/statistcs_title"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/mortslidade_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dados Estatísticos"
            android:textColor="@color/material_blue_grey_950"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <View
            android:id="@+id/frag_disorder_signs_tb_toolbarElevation2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbarElevation"
            android:background="@drawable/elevation"
            android:layout_alignParentTop="true"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:id="@+id/frag_disorder_statistics_rl_mortalidadeGraphFrame"
                android:layout_width="match_parent"
                android:layout_height="200dp">


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frag_disorder_statistics_rl_statisticsFrame"
                android:layout_below="@id/frag_disorder_statistics_rl_mortalidadeGraphFrame"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="30dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_dados"
                    >



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"

                    android:layout_weight="1">
                <TextView
                    android:id="@+id/frag_disorder_statistics_taxaNatalidadeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Incidência"
                    android:textSize="14sp"
                    android:textColor="@color/material_grey_palette_400"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:id="@+id/frag_disorder_statistics_taxaNatalidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não disponivel"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_grey_palette_800"
                    android:layout_below="@id/frag_disorder_statistics_taxaNatalidadeLabel"
                    android:layout_alignLeft="@id/frag_disorder_statistics_taxaNatalidadeLabel"
                    />
                    </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">

                <TextView
                    android:id="@+id/frag_disorder_statistics_taxaMortalidadeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mortalidade"
                    android:textSize="14sp"
                    android:textColor="@color/material_grey_palette_400"
                    />

                <TextView
                    android:id="@+id/frag_disorder_statistics_taxaMortalidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não disponivel"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_grey_palette_800"
                    android:layout_below="@id/frag_disorder_statistics_taxaMortalidadeLabel"

                    />
                    </RelativeLayout>
                </LinearLayout>


               <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                   android:layout_marginTop="30dp"
                   android:layout_below="@id/view_dados">

                   <RelativeLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/frag_disorder_statistics_expectativaLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expectativa"
                    android:textSize="14sp"
                    android:textColor="@color/material_grey_palette_400"
                  />

                       <TextView
                           android:id="@+id/frag_disorder_statistics_expectativa"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Não disponivel"
                           android:layout_below="@id/frag_disorder_statistics_expectativaLabel"
                           android:textSize="16sp"
                           android:textStyle="bold"
                           android:textColor="@color/material_grey_palette_700"

                           />
                    </RelativeLayout>

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_weight="1">




                <TextView
                    android:id="@+id/frag_disorder_statistics_morbidadeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Morbidade"
                    android:textSize="14sp"
                    android:textColor="@color/material_grey_palette_400"


                    />
                   <TextView
                       android:id="@+id/frag_disorder_statistics_taxaMorbidade"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Não disponivel"
                       android:layout_below="@id/frag_disorder_statistics_morbidadeLabel"
                       android:textSize="16sp"
                       android:textStyle="bold"
                       android:textColor="@color/material_grey_palette_700"

                       />
            </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>