<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/frag_disorder_signs_tb_toolbarElevation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarElevation"
        android:background="@drawable/elevation"
        android:layout_alignParentTop="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sign_title"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinais Clínicos"
            android:textColor="@color/material_blue_grey_950"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <View
            android:id="@+id/frag_disorder_signs_tb_toolbarElevation2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbarElevation"
            android:background="@drawable/elevation"
            android:layout_alignParentTop="true"
            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <TextView
    android:id="@+id/frag_disorder_signs_tv_signsQnt"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:textSize="14sp"
    android:text="12"
    android:textColor="@color/material_grey_palette_400"
    />

    <TextView
        android:id="@+id/frag_disorder_signs_tv_signs"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/frag_disorder_signs_tv_signsQnt"
        android:layout_alignParentTop="true"
        android:textSize="14sp"
        android:text="Sinais Clínicos:"
        android:textColor="@color/material_grey_palette_400"
        />
        </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/frag_disorder_signs_rv_signs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_below="@id/frag_disorder_signs_tv_signs"
        android:background="@drawable/selector_list_item"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

    </android.support.v7.widget.RecyclerView>


    </LinearLayout>


</RelativeLayout>