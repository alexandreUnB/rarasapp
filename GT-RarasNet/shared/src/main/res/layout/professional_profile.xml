<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/act_contact_tb_mainToolbar"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_width="match_parent"
        android:background="@color/primary"
        app:theme="@style/AppTheme.Toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        />
    <View
        android:id="@+id/act_center_profile_tb_mainToolbarElevation"
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:background="@drawable/elevation"
        android:layout_below="@id/act_center_profile_tb_mainToolbar"
        />


    <ScrollView
        android:layout_below="@id/act_center_profile_tb_mainToolbarElevation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ab"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            >

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/act_center_profile_cv_mainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                >
                <!--app:cardBackgroundColor="@color/accentColor"-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.gms.maps.MapView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/act_center_profile_mp_centerLocation"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">


                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/act_center_profile_cv_profsCard2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            card_view:cardUseCompatPadding="true"
                            card_view:cardElevation="3dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/act_profe_profile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:orientation="horizontal">
                                    <RelativeLayout

                                        android:id="@+id/av"
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"

                                        >


                                    </RelativeLayout>
                                    <LinearLayout
                                        android:id="@+id/info"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="3dp"
                                        android:layout_weight="0.5"
                                        android:orientation="vertical"

                                        >


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">


                                            <TextView
                                                android:id="@+id/name"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Nome Sobrenome"
                                                android:textColor="@color/accentColor"
                                                android:gravity="center"
                                                android:layout_gravity="center"
                                                android:textSize="20dp"
                                                />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:id="@+id/conselho_profissional"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="NÂ° Conselho"
                                                android:textColor="@color/accentColor"
                                                android:gravity="center"
                                                android:padding="5dp"
                                                android:layout_gravity="center"
                                                android:textSize="13sp"
                                                />

                                            <TextView
                                                android:id="@+id/conselho"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="123445"
                                                android:padding="5dp"
                                                android:layout_gravity="center"
                                                android:textSize="13sp"
                                                android:textColor="@color/material_grey_palette_400"
                                                />

                                            <TextView
                                                android:id="@+id/ativo_desc"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="10dp"
                                                android:text="Ativo"
                                                android:textColor="@color/accentColor"
                                                android:gravity="right"
                                                android:padding="5dp"
                                                android:layout_gravity="center"
                                                android:textSize="13sp"
                                                />

                                            <TextView
                                                android:id="@+id/situacao"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="123445"
                                                android:padding="5dp"
                                                android:textSize="13sp"
                                                android:textColor="@color/material_grey_palette_400"
                                                />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:id="@+id/city_desc"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Cidade"
                                                android:textColor="@color/accentColor"
                                                android:gravity="top"
                                                android:padding="5dp"
                                                android:textSize="13sp"
                                                />

                                            <TextView
                                                android:id="@+id/city"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="abcdef"
                                                android:padding="5dp"
                                                android:layout_gravity="center"
                                                android:textSize="13sp"
                                                android:textColor="@color/material_grey_palette_400"
                                                />
                                        </LinearLayout>



                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:id="@+id/ocupation_desc"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="OcupaÃ§Ã£o"
                                                android:textColor="@color/accentColor"
                                                android:gravity="top"
                                                android:padding="5dp"
                                                android:textSize="13sp"
                                                />

                                            <TextView
                                                android:id="@+id/ocupation"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="abcdef"
                                                android:padding="5dp"
                                                android:layout_gravity="center"
                                                android:textSize="13sp"
                                                android:textColor="@color/material_grey_palette_400"
                                                />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:id="@+id/specialty_desc"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Especialidade(s)"
                                                android:textColor="@color/accentColor"
                                                android:gravity="top"
                                                android:padding="5dp"
                                                android:textSize="13sp"
                                                />

                                            <TextView
                                                android:id="@+id/specialty"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="abcdef"
                                                android:padding="5dp"
                                                android:layout_gravity="center"
                                                android:textSize="13sp"
                                                android:textColor="@color/material_grey_palette_400"
                                            />
                                        </LinearLayout>



                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:weightSum="1">

                                            <android.support.v7.widget.CardView
                                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                                android:id="@+id/act_face_card"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                card_view:cardUseCompatPadding="true"
                                                card_view:cardElevation="3dp"
                                                android:layout_weight="0.20">

                                                <RelativeLayout
                                                    android:layout_gravity="center"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content">
                                                    <ImageView
                                                        android:id="@+id/act_face_professional"
                                                        android:layout_width="36dp"
                                                        android:layout_height="36dp"
                                                        android:layout_centerHorizontal="true"
                                                        android:src="@mipmap/ic_face"
                                                        />



                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="Facebook"
                                                        android:layout_centerInParent="true"
                                                        android:layout_below="@id/act_face_professional"
                                                        android:textSize="10sp"
                                                        android:textColor="@color/material_grey_palette_400"
                                                        />
                                                </RelativeLayout>

                                            </android.support.v7.widget.CardView>

                                        <android.support.v7.widget.CardView
                                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/act_mail_card"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            card_view:cardUseCompatPadding="true"
                                            card_view:cardElevation="3dp"
                                            android:layout_weight="0.20">

                                            <RelativeLayout
                                                android:layout_gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">
                                                <ImageView
                                                    android:id="@+id/act_center_profile_iv_profissionais"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true"
                                                    android:src="@drawable/ic_email_black_36dp"
                                                    />



                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Email"
                                                    android:layout_centerInParent="true"
                                                    android:layout_below="@id/act_center_profile_iv_profissionais"
                                                    android:textSize="10sp"
                                                    android:textColor="@color/material_grey_palette_400"
                                                    />
                                            </RelativeLayout>

                                        </android.support.v7.widget.CardView>

                                            <android.support.v7.widget.CardView
                                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                                android:id="@+id/act_twitter_card"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                card_view:cardUseCompatPadding="true"
                                                card_view:cardElevation="3dp"
                                                android:layout_weight="0.20">

                                                <RelativeLayout
                                                    android:layout_gravity="center"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content">
                                                    <ImageView
                                                        android:id="@+id/act_center_profile_iv_pesquisadores"
                                                        android:layout_width="36dp"
                                                        android:layout_height="36dp"
                                                        android:layout_centerHorizontal="true"
                                                        android:src="@mipmap/ic_twitter"
                                                        />



                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="Twitter"
                                                        android:layout_below="@id/act_center_profile_iv_pesquisadores"
                                                        android:textSize="10sp"
                                                        android:textColor="@color/material_grey_palette_400"
                                                        />
                                                </RelativeLayout>

                                            </android.support.v7.widget.CardView>

                                            <android.support.v7.widget.CardView
                                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                                android:id="@+id/act_telephone_card"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                card_view:cardUseCompatPadding="true"
                                                card_view:cardElevation="3dp"
                                                android:layout_weight="0.20">

                                                <RelativeLayout
                                                    android:layout_gravity="center"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content">
                                                    <ImageView
                                                        android:id="@+id/act_center_profile_iv_doencas"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_centerHorizontal="true"
                                                        android:src="@drawable/ic_phone_forward_black_36dp"
                                                        />



                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="Telefone"
                                                        android:layout_below="@id/act_center_profile_iv_doencas"
                                                        android:textSize="10sp"
                                                        android:textColor="@color/material_grey_palette_400"
                                                        />
                                                </RelativeLayout>

                                            </android.support.v7.widget.CardView>

                                        </LinearLayout>


                                    </LinearLayout>



                                </LinearLayout>

                            </LinearLayout>


                        </android.support.v7.widget.CardView>










                    </LinearLayout>







                </RelativeLayout>

            </android.support.v7.widget.CardView>




        </RelativeLayout>


    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/act_center_profile_cv_diseasesCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            card_view:cardElevation="3dp"
            >



            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"



                android:background="@color/white"

                >



                <ExpandableListView

                    android:id="@+id/frag_center_associates_el_associatesLists"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:childDivider="#00000000"
                    android:dividerHeight="0dp"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>









    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/myCoordinatorLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Here are the existing layout elements, now wrapped in
             a CoordinatorLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- â¦Toolbar, other layouts, other elementsâ¦ -->

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>



</LinearLayout>