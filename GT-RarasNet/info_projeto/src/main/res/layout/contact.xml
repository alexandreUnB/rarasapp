<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchDisordersActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:background="@color/material_palette_700"
    android:animateLayoutChanges="true"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/act_menu_tb_mainToolbar"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_width="match_parent"
        android:background="@color/primary"
        app:theme="@style/AppTheme.Toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        />
    <View
        android:id="@+id/act_menu_tb_mainToolbarElevation"
        android:layout_height="@dimen/toolbarElevation"
        android:layout_width="match_parent"
        android:background="@drawable/elevation"
        android:layout_below="@id/act_menu_tb_mainToolbar"
        />





    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_below="@id/act_menu_tb_mainToolbar"

        android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:drawable/dialog_holo_light_frame">
        <!-->
        <RelativeLayout
            android:id="@+id/aboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/dialog_holo_light_frame"
        >
            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_centerInParent="true"
                android:text="Formas de Contato"
                android:textStyle="bold"
                android:textSize="17sp"
            />



        </RelativeLayout>-->
        <RelativeLayout
            android:id="@+id/links_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:padding="10dp"
            android:background="@android:drawable/dialog_holo_light_frame">


            <TextView
                android:id="@+id/title_links"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_alignParentTop="true"
                android:textColor="@color/material_blue_grey_950"

                android:text="Links Úteis"
                android:textStyle="bold"
                android:textSize="17sp" />


            <LinearLayout
                android:layout_below="@id/act_center_profile_cv_mainCard"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="108dp">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/act_fanpage_Card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="3dp"
                    >

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/act_center_profile_iv_doencas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_facebook_box_black_36dp"
                            />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fan Page"
                            android:layout_below="@id/act_center_profile_iv_doencas"
                            android:textSize="10sp"
                            android:textColor="@color/material_grey_palette_400"
                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/act_web_Card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="3dp"
                    >

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/act_center_profile_iv_profissionais"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_web_black_36dp"
                            />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rede Raras"
                            android:layout_centerInParent="true"
                            android:layout_below="@id/act_center_profile_iv_profissionais"
                            android:textSize="10sp"
                            android:textColor="@color/material_grey_palette_400"
                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/act_database_Card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="3dp"
                    >

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/act_center_profile_iv_pesquisadores"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_database_black_36dp"
                            />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WebService"
                            android:layout_below="@id/act_center_profile_iv_pesquisadores"
                            android:textSize="10sp"
                            android:textColor="@color/material_grey_palette_400"
                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>



            </LinearLayout>





            <TextView
                android:id="@+id/link1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_links"
                android:layout_marginLeft="6dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/link2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/link1"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/link3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/link2"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:text=""
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sendMailFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/links_frame"
            android:paddingBottom="25dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:padding="10dp"
            android:background="@android:drawable/dialog_holo_light_frame">

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_alignParentTop="true"
                android:text="Fale Conosco"
                android:textColor="@color/material_blue_grey_950"
                android:textStyle="bold"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/talkWithUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textColor="@color/material_blue_grey_950"
                android:layout_below="@id/title2"
                android:text="Para sugestões, dúvidas ou críticas,
                mande-nos um e-mail!"
                android:textSize="15sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/sendMail"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sendMailFrame"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:text="Enviar E-mail"
            android:textSize="15sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/button_style"></Button>


    </RelativeLayout>
</ScrollView>


</RelativeLayout>



