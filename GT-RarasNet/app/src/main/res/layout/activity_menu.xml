<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_palette_700"

    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true">


    <android.support.v7.widget.Toolbar
        android:id="@+id/act_menu_tb_mainToolbar"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_width="match_parent"
        android:background="@color/primary"
        app:theme="@style/AppTheme.Toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

    />
    <View
        android:id="@+id/act_menu_tb_mainToolbarElevation"
        android:layout_height="@dimen/toolbarElevation"
        android:layout_width="match_parent"
        android:background="@drawable/elevation"
        android:layout_below="@id/act_menu_tb_mainToolbar"
    />

    <ScrollView
        android:layout_below="@id/act_menu_tb_mainToolbarElevation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <LinearLayout
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal"
                >

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/act_menu_cv_doencas"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="@dimen/act_menu_cv_elevation"
                    card_view:cardBackgroundColor="@color/material_palette_500"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:background="@drawable/tv_selector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/act_menu_iv_doencas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_search_white_48dp"
                            />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/act_menu_cv_doencas"
                                android:layout_below="@id/act_menu_iv_doencas"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold"
                                />
                        </RelativeLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/act_menu_cv_profissionais"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="@dimen/act_menu_cv_elevation"
                    card_view:cardBackgroundColor="@color/material_palette_500"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:background="@drawable/tv_selector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/act_menu_iv_profissionais"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_recent_actors_white_48dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/act_menu_cv_profissionais"
                                android:layout_below="@id/act_menu_iv_profissionais"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold"
                                />
                        </RelativeLayout>
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:orientation="horizontal"
                >

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/act_menu_cv_centros"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="@dimen/act_menu_cv_elevation"
                    card_view:cardBackgroundColor="@color/material_palette_500"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:background="@drawable/tv_selector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/act_menu_iv_centros"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_location_city_white_48dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/act_menu_cv_centros"
                                android:layout_below="@id/act_menu_iv_centros"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold"
                                />
                        </RelativeLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/act_menu_cv_protocolos"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="@dimen/act_menu_cv_elevation"
                    card_view:cardBackgroundColor="@color/material_palette_500"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:background="@drawable/tv_selector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/act_menu_iv_protocolos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_developer_board_white_48dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/act_menu_cv_protocolos"
                                android:layout_below="@id/act_menu_iv_protocolos"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold"
                                />
                        </RelativeLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:orientation="horizontal"
                >

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/act_menu_cv_legislacao"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="@dimen/act_menu_cv_elevation"
                    card_view:cardBackgroundColor="@color/material_palette_500"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:background="@drawable/tv_selector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/act_menu_iv_legislacao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_library_books_white_48dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/act_menu_cv_legislacao"
                                android:layout_below="@id/act_menu_iv_legislacao"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold"
                                />
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/act_menu_cv_meusDados"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="@dimen/act_menu_cv_elevation"
                    card_view:cardBackgroundColor="@color/material_palette_500"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:background="@drawable/tv_selector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/act_menu_iv_usuario"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_perm_identity_white_48dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/act_menu_cv_dadosUsuario"
                                android:layout_below="@id/act_menu_iv_usuario"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold"
                                />
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:orientation="horizontal"
                >

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/act_menu_cv_contato"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="@dimen/act_menu_cv_elevation"
                    card_view:cardBackgroundColor="@color/material_palette_500"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:background="@drawable/tv_selector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/act_menu_iv_contato"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_email_white_48dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/act_menu_cv_contato"
                                android:layout_below="@id/act_menu_iv_contato"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold"
                                />
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/act_menu_cv_sobreNos"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="@dimen/act_menu_cv_elevation"
                    card_view:cardBackgroundColor="@color/material_palette_500"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:background="@drawable/tv_selector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/act_menu_iv_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_info_white_48dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/act_menu_cv_sobre"
                                android:layout_below="@id/act_menu_iv_info"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold"
                                />
                        </RelativeLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>