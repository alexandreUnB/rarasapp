<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:paddingTop="10dp"
    android:layout_margin="5dp"

    android:paddingBottom="10dp"
    >





    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/act_fanpage_Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"


            >




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">




    <TextView
        android:textColor="@color/primary_material_dark"

        android:id="@+id/tv_model"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="16sp" />

    <TextView
        android:textColor="@color/primary_material_dark"
        android:layout_below="@+id/tv_model"
        android:layout_alignLeft="@+id/tv_model"
        android:id="@+id/tv_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp" />

            <TextView
                android:id="@+id/orphanunber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true"

                android:textColor="@color/text_primary_dark_color"
                android:layout_gravity="center_vertical"
                android:layout_below="@id/tv_model"

                android:text="aaaaa"
                />
            <TextView
                android:id="@+id/cid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary_dark_color"
                android:layout_below="@id/orphanunber"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true"

                android:text="aaaaa"
                />



        </RelativeLayout>


            <ImageView
                android:id="@+id/button_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_chevron_right_black_36dp"
                android:textSize="10sp"
                />


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
