<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/disease_profile_tab1"
    android:layout_width="match_parent"
    android:paddingTop="?android:attr/actionBarSize"
    android:layout_height="wrap_content"
    android:background="@drawable/main_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/agora">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/frame_disorder_resume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"
                android:paddingTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@android:drawable/dialog_holo_light_frame">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="@string/doenca_perfil"
                    android:textStyle="bold"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/nameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_below="@id/title1"
                    android:text="@string/doenca_name"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/resumeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/nameLabel"
                    android:layout_below="@id/title1"
                    android:layout_marginTop="6dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/orphanumberLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_below="@id/nameLabel"
                    android:text="@string/doenca_orphanumber"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/resumeOrphanum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/orphanumberLabel"
                    android:layout_below="@id/nameLabel"
                    android:layout_marginTop="6dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/expertLinkLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_below="@id/orphanumberLabel"
                    android:text="@string/doenca_expertlink"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/resumeExpertlink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/expertLinkLabel"
                    android:layout_below="@id/orphanumberLabel"
                    android:layout_marginTop="6dp"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_background_black">

                <TextView
                    android:layout_margin="10dp"
                    android:id="@+id/tvdisease_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/doenca_descricao"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17sp" />

                <TextView

                    android:id="@+id/disease_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/tvdisease_description" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_background_black">

                <TextView
                    android:layout_margin="10dp"
                    android:id="@+id/tvdisease_bibliografia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bibliografia"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17sp" />

                <TextView

                    android:id="@+id/disease_bibliografia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/tvdisease_bibliografia" />


            </RelativeLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>

